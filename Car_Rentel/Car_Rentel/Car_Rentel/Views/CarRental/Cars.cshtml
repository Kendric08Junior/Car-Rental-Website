        gap: 30px;
        padding: 20px;
    }

    .car-card {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        background-color: #fff;
    }

    .car-image {
        width: 100%;
        height: 180px;
